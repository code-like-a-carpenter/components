{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2020"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/types",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2019", // node 12.9.0
    "types": [
      "jest"
    ]
  },
  "include": [
    "./*.ts",
    "./src/**/*.js",
    "./test/**/*.js",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./test/**/*.ts",
    "./types/**/*.d.ts"
  ]
}
